        <bundle>mvn:org.apache.servicemix.specs/org.apache.servicemix.specs.saaj-api-1.4/${saaj-api.version}</bundle>
        <bundle>wrap:mvn:com.carrotsearch.thirdparty/simple-xml-safe/${simple-xml-safe.version}</bundle>


        <bundle>mvn:org.jetbrains.kotlin/kotlin-osgi-bundle/1.7.20</bundle>


    </feature>


